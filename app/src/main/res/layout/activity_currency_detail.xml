<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onyx.cryptocompare.CurrencyDetail">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:padding="6dp"
            android:textAlignment="center"
            android:id="@+id/tv_currency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp" />
        <TextView
            android:padding="6dp"
            android:textAlignment="center"
            android:id="@+id/tv_currency_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:padding="6dp"
                android:id="@+id/lbl_btc_value"
                android:layout_width="wrap_content"
                android:text="BTC Value: "
                android:layout_height="wrap_content"
                android:textSize="22sp" />
            <TextView
                android:padding="6dp"
                android:id="@+id/tv_btc_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:padding="6dp"
                android:id="@+id/lbl_eth_value"
                android:layout_width="wrap_content"
                android:text="ETH Value: "
                android:layout_height="wrap_content"
                android:textSize="22sp" />
            <TextView
                android:padding="6dp"
                android:id="@+id/tv_eth_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
